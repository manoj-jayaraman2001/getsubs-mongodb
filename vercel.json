{
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/subscribers/(.*)",
        "dest": "app.js"
      },
      {
        "src": "/(.*)",
        "dest": "app.js"
      }
    ],
    "env": {
      "MONGODB_URI": "@mongo-uri"
    },
    "static": {
        "public": "public"
    },
    
    "build": {
        "env": {
          "BUILD_ENV": "production"
        },
        "command": "npm run prestart && npm run build"
      }


  }
  